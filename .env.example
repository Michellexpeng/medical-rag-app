# Medical RAG Application Environment Configuration File
# Copy this file to .env and fill in your actual configuration

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1

# Or use other OpenAI API compatible services
# OPENAI_BASE_URL=https://your-custom-api-endpoint.com/v1

# Logging Configuration
LOG_DIR=./logs
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# RAG System Configuration
RAG_WORKING_DIR=./rag_storage
RAG_OUTPUT_DIR=./output

# Processor Configuration
DEFAULT_PARSER=mineru
MAX_WORKERS=2

# Medical Document Paths
MEDICAL_DATA_DIR=./data
MEDICAL_RAW_DIR=./data/raw